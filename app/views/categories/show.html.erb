


<div class="container nft-list-filtered-by-category">
<div class="search-bar-container">
  <h1>
    <%= @category.category_name.capitalize %>
  </h1>
  <div class="searchbar">
<%= form_tag category_path(@category), method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find an NFT"
  %>



<% end %>
</div>
</div>
  <ul>
    <div class="container nft-product-cards display-grid">
      <% @nfts.each do |nft| %>
        <li>
          <div class="card-product flex-column">
            <%= link_to nft_path(nft) do %>
              <%= cl_image_tag nft.photo.key %>
            <% end %>
            <div class="card-product-infos">
              <h2><%= link_to nft.title, nft_path(nft), id: "title" %></h2>
              <p id="price">â‚¿ <%= nft.price %></p>
            </div>
          </div>
        </li>
      <% end %>
    </div>
  </ul>
  <h3>
    <%= link_to "Back to Categories", categories_path, id: "path-to-index" %>
  </h3>
</div>
