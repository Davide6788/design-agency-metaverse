
<h1>Add your NFT</h1>

<div class="container-form-new">
  <%= simple_form_for [ @nft ] do |f| %>
    <div class="create-nft-form">
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.association :category, label_method: :category_name %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create NFT", class: "btn" %>
    </div>
  <% end %>
</div>
