<div class="log-in-form">
  <div id="loginFormContent" >
    <%= simple_form_for(resource, html: { class: "d-flex flex-row container align-items-center"}, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs col-12 col-md-6">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions col-12 col-md-6">
        <%= f.button :submit, "Log in", class: "login-btn"%>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
